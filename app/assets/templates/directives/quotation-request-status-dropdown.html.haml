	.dropdown.show-slide-down{ "uib-dropdown" => "", "ng-hide" => "adStatus == 'pending' || adStatus == 'closed' "}
		%a.dropdown-toggle{ href: "", "uib-dropdown-toggle" => "" }
			%i.fa.fa-angle-down.classified-ad-toggle
