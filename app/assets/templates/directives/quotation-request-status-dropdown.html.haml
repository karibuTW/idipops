			%li{ "ng-show" => "adStatus == 'published' || adStatus == 'reported' || adStatus == 'inactive' || adStatus == 'private' " }
				%a{ href: "", "ng-click" => "setClassifiedStatus('close')" } {{"classified_ad.close" | t}}