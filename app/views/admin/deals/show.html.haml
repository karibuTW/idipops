.page-header
  %h1
    = "Bon plan ##{@deal.id}: #{@deal.tagline}"

  = link_to admin_deal_path(@deal), class: 'btn btn-danger btn-xs', method: :delete, title: "Supprimer bon plan #{@deal.id}", data: {confirm: "Vous allez supprimer le bon plan #{@deal.id}. Etes-vous sûr ?"} do
    %i.fa.fa-times

.row
  .col-sm-6
    .row
      .col-sm-3
        %strong Postée par
      .col-sm-9
        = link_to admin_user_path(@deal.user), class: "btn btn-default btn-xs" do
          = image_tag @deal.user.avatar.thumb('20x20').url, style: "width: 20px; height:20px;" if @deal.user.avatar_stored?
          = @deal.user.display_name
    .row
      .col-sm-3
        %strong Début
      .col-sm-9= @deal.start_date
    .row
      .col-sm-3
        %strong Fin
      .col-sm-9= @deal.end_date
    .row
      .col-sm-3
        %strong Image principale
      .col-sm-9= image_tag @deal.featured_image.url, style: "width: 256px; height:144px;" if @deal.featured_image_stored?
  .col-sm-6
    .row
      .col-sm-3
        %strong Description
      .col-sm-9= @deal.description
    .row
      .col-sm-3
        %strong Image de listing
      .col-sm-9= image_tag @deal.list_image.url, style: "width: 200px; height:160px;" if @deal.list_image_stored?