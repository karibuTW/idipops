.page-header
  %h1 Bons plans
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th #
        %th Accroche
        %th Description
        %th De
        %th Début
        %th Fin
        %th Action
    %tbody
      - @deals.each do |deal|
        %tr
          %td= deal.id
          %td
            = link_to admin_deal_path(deal), class: "btn btn-default btn-xs" do
              = deal.tagline
          %td= deal.description
          %td
            = link_to admin_user_path(deal.user), class: "btn btn-default btn-xs" do
              = deal.user.display_name
          %td= deal.start_date.present? ? deal.start_date : '-'
          %td= deal.end_date.present? ? deal.end_date : '-'
          %td
            = link_to "Voir", admin_deal_path(deal), class: "btn btn-default btn-xs"
          %td
            = link_to admin_deal_path(deal), class: 'btn btn-danger btn-xs', method: :delete, title: "Supprimer bon plan #{deal.id}", data: {confirm: "Vous allez supprimer le bon plan #{deal.id}. Etes-vous sûr ?"} do
              %i.fa.fa-times