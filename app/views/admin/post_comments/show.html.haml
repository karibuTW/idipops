.page-header
  %h1
    = "Commentaire de post ##{@post_comment.id}"
  = link_to admin_post_comment_path(@post_comment), class: 'btn btn-danger btn-xs', method: :delete, title: "Supprimer le commentaire #{@post_comment.id}", data: {confirm: "Vous allez supprimer le commentaire #{@post_comment.id}. Etes-vous s√ªr ?"} do
    %i.fa.fa-times
.row
  .col-sm-12
    .row
      .col-sm-3
        %strong Contenu
      .col-sm-9= @post_comment.content
    .row
      .col-sm-3
        %strong Date
      .col-sm-9= @post_comment.created_at
    .row
      .col-sm-3
        %strong Utilisateur
      .col-sm-9
        = link_to admin_user_path(@post_comment.user), class: "btn btn-default btn-xs" do
          = image_tag @post_comment.user.avatar.thumb('20x20').url, style: "width: 20px; height:20px;" if @post_comment.user.avatar_stored?
          = @post_comment.user.pretty_name
    .row
      .col-sm-3
        %strong Post
      .col-sm-9
        = link_to admin_post_path(@post_comment.post), class: "btn btn-default btn-xs" do
          = @post_comment.post.title
    .row
      .col-sm-6
        = link_to "Back",:back,class: "btn btn-primary btn-xs"