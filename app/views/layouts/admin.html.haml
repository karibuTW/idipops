!!!
%html
  %head
    %meta{:charset => 'utf-8'}
    %title Uneo admin
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %link{rel: 'shortcut icon', type:"image/png", href: '/favicon.png'}
    = stylesheet_link_tag :backend
    = javascript_include_tag :backend
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{ role: "navigation" }
      .container
        .navbar-header
          %button.navbar-toggle{ type: "button", data: { toggle: "collapse", target: ".navbar-collapse"} }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: admin_path } Un√©o admin
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to 'Utilisateurs', admin_users_path
            %li= link_to 'Professions', admin_professions_path
            %li= link_to 'Annonces', admin_classified_ads_path
            %li= link_to 'Prix', admin_pricings_path
            %li= link_to 'Bons plans', admin_deals_path
            %li= link_to 'Reviews', admin_reviews_path
    .all-wrapper
      .content-wrapper
        .container
          - if flash[:notice].present?
            .alert.alert-info
              = flash[:notice]
              %a.close{ data: {dismiss:"alert"}, href:"#", aria: {hidden:"true"}} &times;
          - if flash[:alert].present?
            .alert.alert-danger
              = flash[:alert]
              %a.close{ data: {dismiss:"alert"}, href:"#", aria: {hidden:"true"}} &times;
          = yield
